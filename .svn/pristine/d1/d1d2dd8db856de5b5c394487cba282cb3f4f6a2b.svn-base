ul {
    display: block;
    list-style-type: disc;
    margin-block-start: 0;
    margin-block-end: 0;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    padding-inline-start: 0;
}
/* Reset ------------------------------------------------------- */
html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary, time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
	background: transparent;
	outline: 0;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section {display: block; }
*{
	-webkit-box-sizing:  border-box;
	-webkit-text-size-adjust: none;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
html {
	-ms-touch-action: none;
}
body {
	-webkit-user-select: none;
	-webkit-touch-callout: none;
	-webkit-text-size-adjust: none;
	/* -webkit-tap-highlight-color: rgba(0,0,0,0); */
	font-weight: normal;
	line-height: normal;
}

/* tables still need 'cellspacing="0"' in the markup */
table {border-collapse: collapse; border-spacing: 0; vertical-align: middle; }
ol, ul, dl, menu, li {list-style: none; }
blockquote, q {quotes: none; }
blockquote:before, blockquote:after, q:before, q:after {content: '';	content: none; }
i, em, address {font-style: normal; font-weight: normal; }
input, textarea, select, button {vertical-align: middle;}
/* remember to define focus styles */
:focus {outline-width:medium; }
/* remember to highlight inserts somehow */
ins {text-decoration: none; }
del {text-decoration: line-through; }
/* 접근성 요소 hidden */
.blind, lengend {display: block;	overflow: hidden; position: absolute; top: 0; left: -1000em; }
 caption {width: 0; height: 0; overflow: hidden; }
/* 모바일 대응 */
body {-webkit-text-size-adjust: none;}/* 뷰포트 변환 시 폰트크기 자동 확대 방지 */
a {text-decoration: none; }
a[href^="tel"] {font-style: normal; }
address, caption, em, var {font-style: normal;font-weight: normal; }
input, textarea, select, br, p {letter-spacing: normal;}
input[type="text"], input[type="password"],input[type="submit"], input[type="search"], input[type="number"] {-webkit-appearance:none;border-radius:0;}
input[type="checkbox"] {-webkit-appearance:none;-webkit-border-radius:0; }
input:checked[type="checkbox"] {-webkit-appearance:none; }
input[type="radio"] {-webkit-appearance:none; border:none; }
button, input[type="button"], input[type="submit"], input[type="reset"], input[type="file"] {-webkit-appearance:none;border-radius:0;cursor: pointer;}
input[type="search"]::-webkit-search-cancel-button {-webkit-appearance:none;}
textarea {-webkit-appearance:none; }
select {-webkit-appearance:menulist-text; }
/* Reset  End ------------------------------------------------------- */


/* Global Type Selector */
/*a:focus, div:focus, button:focus {outline:0;}*/
html {
	position: relative;
	direction: ltr;
	height: 100%;
}
body  * {
	letter-spacing: -0.025em;
}
body {
    margin: 0;
	padding: 0;
	font-size: 16px;
	font-family: KBFGTextL, sans-serif;
	letter-spacing: normal;
	line-height: 100%;
	color: #111;
	height: 100%;
}
a {
	font-size: inherit;
	color: inherit;
	background-color: transparent;
}
ins {
	text-decoration: none;
}
img, table, input, button, select, textarea {
	vertical-align: middle;
}
pre, code, samp, kbd {
	font-family: 'Consolas', 'Courier New', 'Lucida Console', 'Courier', monospace;
}

/* Local Type Selector */
h1, h2, h3, h4, h5, h6, p, pre, blockquote, ul, ol, dl, dd, form, input, button, select, textarea, fieldset {
	margin: 0;
}
h1, h2, h3, h4, h5, h6 {
    font-weight: 400;
    -webkit-font-smoothing: subpixel-antialiased;
}
pre {
	-o-tab-size: 4;
	-moz-tab-size: 4;
	tab-size: 4;
}
a {
	border: none;
	text-decoration: none;
}
	a:hover,
	a:focus,
	a:active {
		text-decoration: none;
		cursor: pointer;
	}
strong, b {
	font-size: inherit;
	font-weight: bold;
}
mark {
	color: inherit;
	background-color: transparent;
}
q:before,
q:after {
	content: "";
}
img {
	border: 0;
	vertical-align: middle;
	/* image-rendering: auto; */
	image-rendering: crisp-edges;
	/* image-rendering: pixelated; */
	image-rendering: -moz-crisp-edges;         /* Firefox */
	image-rendering:   -o-crisp-edges;         /* Opera */
	image-rendering: -webkit-optimize-contrast;/* Webkit (non-standard naming) */
	image-rendering: crisp-edges;
	-ms-interpolation-mode: nearest-neighbor;  /* IE (non-standard property) */
}
iframe {
	border: 0;
	vertical-align: middle;
}
sub {
	font-size: 0.3em;
	position: relative;
	top: 0.5em;
}
sup {
	font-size: 0.3em;
	position: relative;
	top: -0.5em;
}
hr {
	border: 0;
	border-bottom: 1px solid #ddd;
	margin: 0.5em 0;
}
code {
	background: rgba(55, 58, 64, 0.075);
	border-radius: 0.25em;
	font-family: "Courier New", monospace;
	font-size: 0.8em;
	margin: 0 0.25em;
	padding: 0.25em 0.65em;
}
pre {
	-webkit-overflow-scrolling: touch;
	font-family: "Courier New", monospace;
	font-size: 0.8em;
	margin: 0 0 2em 0;
}
	pre code {
		display: block;
		padding: 1em 1.5em;
		overflow-x: auto;
	}

::selection,
::-moz-selection {
	color: #ffffff;
	background-color: #4868e1;
	background-color: rgba(72,104,225, .9);
	text-shadow: none;
}

/* Handheld-Only Type Selector */
html {-ms-text-size-adjust: none; -moz-text-size-adjust: none; -webkit-text-size-adjust: none; /* -webkit-tap-highlight-color: rgba(0,0,0, 0); */ }

/* img, iframe, embed, object, video, audio {max-width: 100%; height: auto; } */
iframe, textarea {-webkit-overflow-scrolling: touch; }

/* ::-ms-clear, ::-ms-reveal {display: none; } */
input[type="number"]::-webkit-inner-spin-button,
input[type="number"]::-webkit-outer-spin-button {-webkit-appearance: none; margin: 0; }

/* Special-Class Selector */
.longdesc {display: block; position: absolute; left: -10240px; width: 1px; height: 1px; overflow: hidden; }
.transparent {-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)"; filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=0); opacity: 0; }

/* Box Model */
*, *:before, *:after {
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	word-break: break-word;
	word-wrap: break-word;
}
ul:after, ol:after {
    content: none;
}
html >/**/body .clear {display: block; }
html >/**/body .clear:after {content: ""; display: block; clear: both; height: 0; visibility: hidden; }



/* common UI */
/*======================================*/
/* 스크롤 scrollbar  */
/* Let's get this party started */
.cust-scrollbar::-webkit-scrollbar {
	width: 4px;
	height: 4px;
}
/* Track */
.cust-scrollbar::-webkit-scrollbar-track {
	-webkit-box-shadow: inset 0 0 4px rgba(0,0,0,0.0);
	-webkit-border-radius: 10px;
	border-radius: 10px;
}
/* Handle */
.cust-scrollbar::-webkit-scrollbar-thumb {
	-webkit-border-radius: 10px;
	border-radius: 10px;
	background: rgba(179, 179, 179, 0.5);
	-webkit-box-shadow: inset 0 0 4px rgba(0,0,0,0.5);
}
.cust-scrollbar::-webkit-scrollbar-thumb:window-inactive {
	background: rgba(179, 179, 179, 0.8);
}
/*======================================*/

.bar {
    position: relative;
    display: block;
    width: 100%;
}

.bar:after {
    position: absolute;
    content: '';
    width: 0;
    height: 2px;
    left: 0;
    bottom: 0;
    background-color: #37cbcf;
    transition: 0.2s ease all;
    -moz-transition: 0.2s ease all;
    -webkit-transition: 0.2s ease all;
}

.bar:after {
    right: 100%;
}

.clear {
    zoom: 1;
    clear: both;
}

    .clear:after {
        content: "";
        display: block;
        clear: both;
    }

.noresize {
    resize: none;
}

.hidden {
	display: none !important;
}

.blind {
    margin: 0 !important;
    padding: 0 !important;
    width: 0 !important;
    height: 0 !important;
    font-size: 0 !important;
    line-height: 0 !important;
    position: absolute;
    left: -1000px;
}

.box_shadow {
    border: 0.04rem solid #b0b0b0;
    border-radius: 0.3em;
    background-color: white;
    box-shadow: 0 3px 7px rgba(0, 0, 0, 0.15);
    width: calc(100% - 4em);
    margin: 0 auto;
}

.box {
	background-color: #fff;
	border: 1px solid #ddd;
	margin: 0.625em 0;
	padding: 0.875em 1.0em !important;
	max-height: 14em;
	overflow: hidden;
}

.box span {
	color:#828282;
	line-height: 1.6em;
}

input, select {
	border:1px solid #e1e1e1;
	line-height: 1.7em;
	font-weight: normal;
	color: #000;
	border-radius: 0;
	padding:0 0.625em;
	min-height: 2.625em;
	width:100%;
}

select {
	padding:0 0.3em;
	line-height: 1.7em;
	font-size:0.75em;
	/* margin-right: -1px; */
	appearance:none;
	background:url('../images/select_arrow_down.png') no-repeat right 8px center;
	background-size: 9px;
	font-family: KBFGText, AppleGothic, sans-serif;
	height: 100%;
}

input:focus, input:hover, input:active, option:active, option:focus, select:active, select:focus {
	border-radius: 0 !important;
	border-color: #fdb813 !important;
	outline: none;
}

input.disabled {
	background:#f1f1f2;
}
input.disabled::placeholder {
	color:#aaa !important;
}

.date::placeholder {
	color:#222;
}

.date {
	padding:0 0.3em;
	line-height: 1.7em;
	font-size:0.75em;
	margin-right: -1px;
	appearance:none;
	background:url('../images/date.png') no-repeat right 8px center;
	background-size: 18px;
	font-family: KBFGText, AppleGothic, sans-serif;
	height: 100%;
}


input::placeholder {
	color:#AAAAAA;
}

select label {
	line-height: 1.7em;
}

input[type="checkbox"], [type="radio"] {
	display: none;
  }

input[type="checkbox"] + label, [type="radio"] + label {
	display: inline-block;
	width: 18px;
	height: 18px;
	border:1px solid #ddd;
	position: relative;
	border-radius: 50%;
  }

 [type="radio"] + label {
	margin-top: 2px;
	}

  input[type="checkbox"]:checked + label::after {
	content:'';
	border:1px solid #5c5342;
	font-size: 12x;
	width: 16px;
	height: 16px;
	text-align: center;
	position: absolute;
	border-radius: 50%;
	background:url(../images/checked.png) center center #7A6F5B no-repeat;
	background-size: 10px;
	box-shadow:0 0 0 1px #6B6558;
	color:#fff;
  }

[type="radio"]:checked + label::after {
	content:'';
	border:3.5px solid #fff;
	font-size: 25px;
	width: 16px;
	height: 16px;
	text-align: center;
	position: absolute;
	border-radius: 50%;
	background:#7A6F5B;
	background-size: 10px;
	box-shadow:0 0 0 1px #6B6558;
  }

  .checkbox input[type="checkbox"], .checkbox input[type="checkbox"] + label, .checkbox input[type="checkbox"]:checked + label::after {
	float:unset !important;
	margin-right: 0.5em;
	border-radius: 0;
  }

  
  .box_container input[type="checkbox"], .box_container input[type="checkbox"] + label, .box_container input[type="checkbox"]:checked + label::after {
	float:right;
	margin-right: 0.5em;
	border-radius: 0;
  }


  .check_container span {
	margin-left:5px;
	font-size:0.8em;
	padding-top: 0.3em !important;
	}

  [type="radio"]:disabled {
	background-color: lightgray;
	box-shadow: none;
	opacity: 0.7;
	cursor: not-allowed;
  }
  
  [type="radio"]:disabled + label {
	opacity: 0.6;
	cursor: not-allowed;
  }

  [type="radio"]:disabled + label + span {
	opacity: 0.3;
	cursor: not-allowed;
  }

